@model List<laalou.Models.Produit>
@{
    ViewData["Title"] = "Index Page";
}

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="~/images/@product.Photo" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pb-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Nom</p>
                                <p class="card-title text-warning text-center">by <b>@product.Description</b></p>
                            </div>
                            <div class="pb-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">List Price:<span class="text-decoration-line-through">@product.Prix</span></p>
                            </div>

                        </div>
                        <div>
                            <a asp-action="Edit"
                               asp-route-productId="~/images/@product.Id"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                Edite
                            </a>
                            <a asp-action="Delete"
                               asp-route-productId="~/images/@product.Id"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                Detelet
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


</div>