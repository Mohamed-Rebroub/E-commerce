@model Produit;


<form asp-action="Edit" methode="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-bg-danger-primary text-center">Edit Scenes</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Nom"></label>
            <input asp-for="Nom" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Prix"></label>
            <input asp-for="Prix" type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Photo"></label>
            <input asp-for="Photo" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Photo" class="control-label"></label>
            <input type="file" name="file" class="form-control" />
        </div>
        <div class="form-group">
            <img src="@Model.Photo" width="100%"
                 style="border-radius:5px; border:1px solid #bbb9b9" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Adm" asp-action="index" class="btn btn-outline-secondary border" style="width.150px">
                    Back to List
                </a>
            </div>
        </div>


    </div>
</form>